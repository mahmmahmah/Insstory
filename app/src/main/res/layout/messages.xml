<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_weight="1">
		<androidx.core.widget.NestedScrollView
			android:id="@+id/nested"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/nestedbody"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/top"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="12dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/profile_image"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/baseline_account_circle_black_48dp"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#00000000"
						app:civ_border_overlay="true" />
					<TextView
						android:id="@+id/yourname"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="yourname"
						android:textSize="20sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<LinearLayout
						android:id="@+id/search_body"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/search_m_icon"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/search"
							android:scaleType="centerInside" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/menu_body"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:padding="8dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/menu_m_icon"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/dashboard_menu"
							android:scaleType="centerInside" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</androidx.core.widget.NestedScrollView>
		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swipe"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/swipe_body"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<HorizontalScrollView
					android:id="@+id/stories_scrool"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<LinearLayout
						android:id="@+id/stories_scrool_body"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/mystory_body"
							android:layout_width="100dp"
							android:layout_height="110dp"
							android:background="#FFFFFF"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical">
							<de.hdodenhof.circleimageview.CircleImageView
								android:id="@+id/mystory_profile"
								android:layout_width="65dp"
								android:layout_height="65dp"
								android:padding="5dp"
								android:background="@android:color/transparent"
								android:src="@drawable/baseline_account_circle_black_48dp"
								app:civ_border_width="0dp"
								app:civ_border_color="#000000"
								app:civ_circle_background_color="#00000000"
								app:civ_border_overlay="true" />
							<TextView
								android:id="@+id/mystory_username"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="2dp"
								android:layout_marginBottom="8dp"
								android:text="Add Story"
								android:textSize="16sp"
								android:textColor="#000000"
								android:singleLine="true" />
						</LinearLayout>
						<androidx.recyclerview.widget.RecyclerView
							android:id="@+id/stories_view"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" />
					</LinearLayout>
				</HorizontalScrollView>
				<com.google.android.material.tabs.TabLayout
					android:id="@+id/tabs"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					app:tabGravity="fill"
					app:tabMode="fixed"
					app:tabIndicatorHeight="3dp"
					app:tabIndicator="@drawable/custom_tab"
					app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" />
				<androidx.viewpager.widget.ViewPager
					android:id="@+id/pages"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#ECEFF1" />
			</LinearLayout>
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		<LinearLayout
			android:id="@+id/bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/home"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/home_icon"
					android:layout_width="75dp"
					android:layout_height="30dp"
					android:padding="3dp"
					android:background="@android:color/transparent"
					android:src="@drawable/home_outline"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/search"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/search_icon"
					android:layout_width="75dp"
					android:layout_height="30dp"
					android:padding="3dp"
					android:background="@android:color/transparent"
					android:src="@drawable/search_outline"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/shop"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/shop_icon"
					android:layout_width="75dp"
					android:layout_height="30dp"
					android:padding="3dp"
					android:background="@android:color/transparent"
					android:src="@drawable/reels_outline"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/messages"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/messages_icon"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp"
					android:padding="3dp"
					android:background="@android:color/transparent"
					android:src="@drawable/chats_filled"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/profile"
				android:layout_width="100dp"
				android:layout_height="match_parent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/profile_avatar"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:background="@android:color/transparent"
					android:src="@drawable/baseline_account_circle_black_48dp"
					app:civ_border_width="0dp"
					app:civ_border_color="#000000"
					app:civ_circle_background_color="#00000000"
					app:civ_border_overlay="true" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
