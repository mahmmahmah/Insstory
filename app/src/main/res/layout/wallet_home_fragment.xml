<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none">
			<LinearLayout
				android:id="@+id/scroll_in_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/top"
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="My Wallet"
						android:textSize="18sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/avatar"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="8dp"
						android:padding="4dp"
						android:src="@drawable/baseline_account_circle_black_48dp"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#FFFFFF"
						app:civ_border_overlay="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/top_spc"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#ECEFF1"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/cp_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/club_points"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:text="0 CP"
						android:textSize="40sp"
						android:textColor="#000000"
						android:layout_weight="1" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/buttons"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/request_cp"
						android:layout_width="150dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="14dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="8dp"
						android:layout_marginBottom="8dp"
						android:padding="14dp"
						android:background="#651FFF"
						android:gravity="center_horizontal|center_vertical"
						android:text="CP Request"
						android:textSize="16sp"
						android:textColor="#FFFFFF"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/send_cp"
						android:layout_width="150dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:layout_marginTop="8dp"
						android:layout_marginRight="14dp"
						android:layout_marginBottom="8dp"
						android:padding="14dp"
						android:background="#FFFFFF"
						android:gravity="center_horizontal|center_vertical"
						android:text="Send CP"
						android:textSize="16sp"
						android:textColor="#651FFF"
						android:layout_weight="1" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/inventory"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="4dp"
					android:paddingRight="8dp"
					android:paddingBottom="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/inventory_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="Inventory"
						android:textSize="18sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/inventory_icon"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:src="@drawable/ic_chevron_right_black"
						android:scaleType="centerInside" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/daily_missions"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="4dp"
					android:paddingRight="8dp"
					android:paddingBottom="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/daily_missions_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="Daily Missions"
						android:textSize="18sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/daily_missions_icon"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:src="@drawable/ic_chevron_right_black"
						android:scaleType="centerInside" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/purchase_history"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="4dp"
					android:paddingRight="8dp"
					android:paddingBottom="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/purchase_history_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="Purchase History"
						android:textSize="18sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/purchase_history_icon"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:src="@drawable/ic_chevron_right_black"
						android:scaleType="centerInside" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/cp_history"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="14dp"
					android:paddingTop="8dp"
					android:paddingRight="14dp"
					android:paddingBottom="14dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/cp_history_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="History"
						android:textSize="18sp"
						android:textColor="#000000" />
					<androidx.recyclerview.widget.RecyclerView
						android:id="@+id/cp_history_view"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/shop"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="4dp"
					android:paddingRight="8dp"
					android:paddingBottom="4dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/shop_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:text="Shop"
						android:textSize="18sp"
						android:textColor="#000000"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/shop_icon"
						android:layout_width="42dp"
						android:layout_height="42dp"
						android:src="@drawable/ic_chevron_right_black"
						android:scaleType="centerInside" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
