<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/scroll_in_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					android:layout_weight="1">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/profile_image"
						android:layout_width="90dp"
						android:layout_height="90dp"
						android:layout_marginLeft="8dp"
						android:layout_marginTop="30dp"
						android:layout_marginRight="8dp"
						android:layout_marginBottom="30dp"
						android:src="@drawable/loading"
						android:translationY="10.0dp"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#FFFFFF"
						app:civ_border_overlay="true" />
					<EditText
						android:id="@+id/name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="18dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Name"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:imeOptions="actionNext"
						android:maxLength="30" />
					<EditText
						android:id="@+id/username"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Username"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:imeOptions="actionNext"
						android:maxLength="30" />
					<EditText
						android:id="@+id/biography"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Biography"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:imeOptions="actionNext"
						android:maxLength="250" />
					<LinearLayout
						android:id="@+id/linear5"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:maxLength="250">
						<TextView
							android:id="@+id/code_phone"
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:text="+00"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="#000000" />
						<EditText
							android:id="@+id/phonenumber"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="24dp"
							android:layout_marginTop="12dp"
							android:layout_marginRight="24dp"
							android:paddingLeft="18dp"
							android:paddingTop="14dp"
							android:paddingRight="18dp"
							android:paddingBottom="14dp"
							android:background="#E0E0E0"
							android:textSize="16sp"
							android:textColor="#000000"
							android:hint="Phone Number"
							android:textColorHint="#757575"
							android:singleLine="true"
							android:inputType="phone"
							android:imeOptions="actionNext" />
					</LinearLayout>
					<EditText
						android:id="@+id/edittext1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Confirm phone number"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:inputType="phone"
						android:imeOptions="actionNext" />
					<EditText
						android:id="@+id/email"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="E-Mail"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:imeOptions="actionNext" />
					<EditText
						android:id="@+id/password"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="24dp"
						android:paddingLeft="18dp"
						android:paddingTop="14dp"
						android:paddingRight="18dp"
						android:paddingBottom="14dp"
						android:background="#E0E0E0"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Password"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:inputType="textPassword"
						android:imeOptions="actionDone" />
					<CheckBox
						android:id="@+id/terms"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="19dp"
						android:layout_marginTop="12dp"
						android:layout_marginRight="19dp"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:text="I accept all terms and conditions"
						android:textSize="16sp"
						android:textColor="#757575" />
					<Button
						android:id="@+id/signup"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="24dp"
						android:layout_marginTop="30dp"
						android:layout_marginRight="24dp"
						android:padding="8dp"
						android:background="#F4511E"
						android:text="Sign Up"
						android:textSize="16sp"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/signin_inf"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginBottom="8dp"
						android:padding="8dp"
						android:text="Already Have an Account\?"
						android:textSize="16sp"
						android:textColor="#757575" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
